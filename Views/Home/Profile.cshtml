@model UserProfile

<div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
    <!-- Kullanıcı Profili -->
    <div class="flex items-center">
        <img class="w-24 h-24 rounded-full" src="/uploads/@Model.User.ImgPath" alt="">
        <div class="ml-6">
            <h2 class="text-2xl font-bold">@Model.User.UserName</h2>
        </div>
    </div>
    <!-- Tweetler -->
    <div class="mt-6">
        <h3 class="text-xl font-bold mb-4">Tweetler</h3>
        @foreach (var item in @Model.Posts)
        {
            <div class="bg-white p-4 rounded-lg shadow-md mb-4">
                <div class="flex justify-between items-center">
                    <a href="/detay/@item.Id" class="text-gray-800 hover:underline">
                        <p>@item.Summary</p>
                    </a>
                    @if (ViewBag.Post)
                    {
                        @if(ViewBag.Yetki == "Full")
                        {
                            <a href="/habersil/@item.Id" onclick="return confirm('Emin misin?')" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">Sil</a>
                        }
                    }
                </div>
                <div class="text-gray-500 text-sm mt-2">@item.CreatedDate.ToString("dddd dd.yy HH:mm")</div>
            </div>
        }
    </div>
</div>
