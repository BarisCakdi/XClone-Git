@model User

@if (ViewBag.AuthError != null)
{
    <div class="alert alert-danger mb-3" role="alert">
        @ViewBag.AuthError
    </div>
}


<form method="post" action="/giris" autocomplete="off">
    <p><input type="text" name="Username" placeholder="Kullanıcı adı" /></p>
    <p><input type="password" name="Password" placeholder="Şifre" /></p>
    <button type="submit">Giriş Yap</button>
</form>