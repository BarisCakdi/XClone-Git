@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}
@if (ViewBag.mesaj != null)
{
    <div class="alert alert-danger mb-3" role="alert">
        @ViewBag.mesaj
    </div>
}
else
{
    <div class="col-lg-6">
        <h3>Gönderi oluştur</h3>
        <form class="row g-3 mb-3" method="post" action="/haberekle" enctype="multipart/form-data">
            <div class="col-12">
                <input type="text" class="form-control" name="Summary" placeholder="Özet" />
            </div>
            <div class="col-12">
                <input type="file" class="form-control" name="Img" />
            </div>
            <div class="col-12">
                <button class="btn btn-success btn-block">Ekle</button>
            </div>
        </form>
    </div>
}
